<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GardenMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- No Title Bar-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- 상태바까지 View를 보여줄 수 있다-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryVariant">@color/status_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>