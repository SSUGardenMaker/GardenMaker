<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="280dp"
    android:background="@drawable/layout_border"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/iv_plant_done"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/plant15"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_plant_done_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant_done"
        app:layout_constraintBottom_toTopOf="@+id/tv_plant_done_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_plant_done_name_value"
        android:layout_marginStart="5dp"
        android:text="이름"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular"/>

    <TextView
        android:id="@+id/tv_plant_done_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_done_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plant_done_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_plant_done_name"
        android:layout_marginStart="10dp"
        android:background="@drawable/border_btn_dialog"
        android:backgroundTint="@color/btn_text_color"
        android:padding="7dp"
        android:text="만보기 테스트"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular" />

    <TextView
        android:id="@+id/tv_plant_done_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_done_name"
        app:layout_constraintBottom_toTopOf="@id/tv_plant_done_start"
        app:layout_constraintLeft_toLeftOf="@+id/tv_plant_done_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_plant_done_type_value"
        android:text="종류"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular"/>

    <TextView
        android:id="@+id/tv_plant_done_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_done_type"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plant_done_type"
        app:layout_constraintLeft_toRightOf="@+id/tv_plant_done_type"
        android:layout_marginStart="10dp"
        android:background="@drawable/border_btn_dialog"
        android:backgroundTint="@color/btn_text_color"
        android:padding="7dp"
        android:text="만보기"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular" />

    <TextView
        android:id="@+id/tv_plant_done_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_done_type"
        app:layout_constraintBottom_toTopOf="@+id/tv_plant_done_end"
        app:layout_constraintLeft_toLeftOf="@+id/tv_plant_done_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_plant_done_start_value"
        android:text="시작 날짜"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular"/>

    <TextView
        android:id="@+id/tv_plant_done_start_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_done_start"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plant_done_start"
        app:layout_constraintLeft_toRightOf="@+id/tv_plant_done_start"
        android:layout_marginStart="10dp"
        android:background="@drawable/border_btn_dialog"
        android:backgroundTint="@color/btn_text_color"
        android:padding="7dp"
        android:text="2021-02-03"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular" />

    <TextView
        android:id="@+id/tv_plant_done_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_done_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_plant_done_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_plant_done_end_value"
        android:text="종료 날짜"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular"/>

    <TextView
        android:id="@+id/tv_plant_done_end_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_done_end"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plant_done_end"
        app:layout_constraintLeft_toRightOf="@+id/tv_plant_done_end"
        android:layout_marginStart="10dp"
        android:background="@drawable/border_btn_dialog"
        android:backgroundTint="@color/btn_text_color"
        android:padding="7dp"
        android:text="2022-04-03"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular" />

</androidx.constraintlayout.widget.ConstraintLayout>