<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:background="@drawable/dialog_titile">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식물 추가"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:id="@+id/plan_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/previous"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:id="@+id/back_btn_dialog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/check_x"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:layout_marginRight="15dp"
            android:id="@+id/ok_btn_dialog"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/PlainName_Edt_Dialog"
                    android:hint="꽃의 이름을 입력해주세요."
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화단 선택"
                    android:textSize="@dimen/dialog_normal_Textsize"
                    android:textColor="@color/Normaltext_Dialog"
                    android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/Category_btn_Dialog"
                    app:layout_constraintBottom_toBottomOf="@id/Category_btn_Dialog"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="@drawable/border_btn_dialog"
                    android:layout_marginRight="10dp"
                    android:id="@+id/Category_btn_Dialog"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/PlainName_Edt_Dialog"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_container_Topmargin">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_borderline_Size"
                    android:background="@color/Borderline_Dialog"
                    android:id="@+id/View1_Dialog"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="종류 선택하기"
                    android:textSize="@dimen/dialog_subtitle_Textsize"
                    android:textColor="@color/Subtitle_Dialog"
                    android:id="@+id/tv3_Dialog"
                    android:layout_marginTop="@dimen/dialog_subtitile_Topmargin"
                    android:layout_marginLeft="@dimen/dialog_Subtitletext_Leftmargin"
                    app:layout_constraintTop_toBottomOf="@id/View1_Dialog"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Container_checkbox1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv3_Dialog">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Checkbox_Check"
                        android:checked="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체크박스"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@id/Checkbox_Check"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_Check"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_Check"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Container_checkbox2"
                    app:layout_constraintLeft_toRightOf="@id/Container_checkbox1"
                    app:layout_constraintTop_toBottomOf="@id/tv3_Dialog">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Checkbox_TimerAccumulate"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누적타이머"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@id/Checkbox_TimerAccumulate"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_TimerAccumulate"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_TimerAccumulate"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Container_checkbox3"
                    app:layout_constraintLeft_toRightOf="@id/Container_checkbox2"
                    app:layout_constraintTop_toBottomOf="@id/tv3_Dialog">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Checkbox_TimerCount"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="횟수타이머"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@id/Checkbox_TimerCount"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_TimerCount"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_TimerCount"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Container_checkbox4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Container_checkbox1">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Checkbox_Pedometer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만보기    "
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@id/Checkbox_Pedometer"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_Pedometer"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_Pedometer"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Container_checkbox5"
                    app:layout_constraintLeft_toRightOf="@id/Container_checkbox4"
                    app:layout_constraintTop_toTopOf="@id/Container_checkbox4">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Checkbox_Goalcounter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="횟수"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@id/Checkbox_Goalcounter"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_Goalcounter"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_Goalcounter"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/Precaution_Tv_Dialog"
                    android:text=""
                    android:textColor="@color/red"
                    app:layout_constraintTop_toBottomOf="@+id/Container_checkbox5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/PrecautionEx_Tv_Dialog"
                    android:text="식물을 만들지 않고 홈 화면에 따로 모아 둡니다."
                    android:textColor="@color/red"
                    app:layout_constraintTop_toBottomOf="@+id/Precaution_Tv_Dialog"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_container_Topmargin"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_borderline_Size"
                        android:background="@color/Borderline_Dialog"
                        android:id="@+id/View3_Dialog"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="세부 계획 정하기"
                        android:textSize="@dimen/dialog_subtitle_Textsize"
                        android:textColor="@color/Subtitle_Dialog"
                        android:layout_marginTop="@dimen/dialog_subtitile_Topmargin"
                        android:layout_marginLeft="@dimen/dialog_Subtitletext_Leftmargin"
                        android:id="@+id/SubTile2_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/View3_Dialog"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--체크박스-->
                    <TextView
                        android:id="@+id/Checkbox_Alarm_tv_Dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Normaltext_Dialog"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:text="알람"
                        android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_Alarm_btn_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_Alarm_btn_Dialog" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Checkbox_Alarm_btn_Dialog"
                        android:layout_width="@dimen/dialog_width_Buttonsize"
                        android:layout_height="@dimen/dialog_height_Buttonsize"
                        android:background="@drawable/border_btn_dialog"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:layout_marginTop="@dimen/dialog_btn_Topmargin"
                        android:text="OFF"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/Checkbox_AlarmTimer_tv_Dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Normaltext_Dialog"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:text="알람 시간"
                        android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                        app:layout_constraintBottom_toBottomOf="@id/Checkbox_AlarmTimer_btn_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/Checkbox_AlarmTimer_btn_Dialog" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Checkbox_AlarmTimer_btn_Dialog"
                        android:layout_width="@dimen/dialog_width_Buttonsize"
                        android:layout_height="@dimen/dialog_height_Buttonsize"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/border_btn_dialog"
                        android:text="@string/dialog_non_time"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/Checkbox_Alarm_btn_Dialog" />

                    <!-- 만보계 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 걸음 수"
                        android:textColor="@color/Normaltext_Dialog"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:id="@+id/GoalParmeter_tv_Dialog"
                        android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/GoalParameter_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/GoalParameter_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/dialog_width_Buttonsize"
                        android:layout_height="@dimen/dialog_height_Buttonsize"
                        android:text="0"
                        android:background="@drawable/border_btn_dialog"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:visibility="gone"
                        android:id="@+id/GoalParameter_btn_Dialog"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달성 횟수"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:textColor="@color/Normaltext_Dialog"
                        android:id="@+id/CountParameter_tv_Dialog"
                        android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/CountParameter_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/CountParameter_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/CountParameter_btn_Dialog"
                        android:layout_width="@dimen/dialog_width_Buttonsize"
                        android:layout_height="@dimen/dialog_height_Buttonsize"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:background="@drawable/border_btn_dialog"
                        android:text="0"
                        android:layout_marginTop="@dimen/dialog_btn_Topmargin"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/GoalParameter_btn_Dialog" />
                    <!--타이머(누적) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달성 누적 시간"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:visibility="gone"
                        android:id="@+id/GoalTimer_Accumulate_tv_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/GoalTimer_Accumulate_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/GoalTimer_Accumulate_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/GoalTimer_Accumulate_btn_Dialog"
                        android:text="@string/dialog_non_time"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:background="@drawable/border_btn_dialog"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                    <!--타이머(횟수) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="반복 시간"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:visibility="gone"
                        android:id="@+id/GoalTimer_Count_tv_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/GoalTimer_Count_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/GoalTimer_Count_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/GoalTimer_Count_btn_Dialog"
                        android:text="@string/dialog_non_time"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:background="@drawable/border_btn_dialog"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달성 횟수"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:visibility="gone"
                        android:id="@+id/Goal_Count_tv_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/Goal_Count_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/Goal_Count_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Goal_Count_btn_Dialog"
                        android:text="@string/dialog_non_time"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:background="@drawable/border_btn_dialog"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dialog_btn_Topmargin"
                        app:layout_constraintTop_toBottomOf="@id/GoalTimer_Count_btn_Dialog"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <!--횟수 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달성 횟수"
                        android:textSize="@dimen/dialog_normal_Textsize"
                        android:visibility="gone"
                        android:id="@+id/CountGoalcounter_tv_Dialog"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/CountGoalcounter_btn_Dialog"
                        app:layout_constraintBottom_toBottomOf="@id/CountGoalcounter_btn_Dialog"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/CountGoalcounter_btn_Dialog"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                        android:background="@drawable/border_btn_dialog"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_container_Topmargin">
                <View
                    android:id="@+id/View4_Dialog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_borderline_Size"
                    android:background="@color/Borderline_Dialog"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv4_Dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 시간 정하기"
                    android:layout_marginLeft="@dimen/dialog_Subtitletext_Leftmargin"
                    android:layout_marginTop="@dimen/dialog_subtitile_Topmargin"
                    android:textColor="@color/Subtitle_Dialog"
                    android:textSize="@dimen/dialog_subtitle_Textsize"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/View4_Dialog" />

                <TextView
                    android:id="@+id/tv4_1_Dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작 날짜"
                    android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                    android:textSize="@dimen/dialog_normal_Textsize"
                    android:textColor="@color/Normaltext_Dialog"
                    app:layout_constraintBottom_toBottomOf="@id/StartDay_Dialog"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/StartDay_Dialog" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/StartDay_Dialog"
                    android:layout_width="@dimen/dialog_width_Buttonsize"
                    android:layout_height="@dimen/dialog_height_Buttonsize"
                    android:text="@string/dialog_non_time"
                    android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                    android:background="@drawable/border_btn_dialog"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv4_Dialog" />

                <TextView
                    android:id="@+id/tv4_2_Dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료 날짜"
                    android:layout_marginLeft="@dimen/dialog_Normaltext_Leftmargin"
                    android:textSize="@dimen/dialog_normal_Textsize"
                    android:textColor="@color/Normaltext_Dialog"
                    app:layout_constraintBottom_toBottomOf="@id/EndDay_Dialog"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/EndDay_Dialog" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/EndDay_Dialog"
                    android:layout_width="@dimen/dialog_width_Buttonsize"
                    android:layout_height="@dimen/dialog_height_Buttonsize"

                    android:layout_marginRight="@dimen/dialog_btn_Rightmargin"
                    android:layout_marginTop="@dimen/dialog_btn_Topmargin"
                    android:text="@string/dialog_non_time"
                    android:background="@drawable/border_btn_dialog"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/StartDay_Dialog" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>