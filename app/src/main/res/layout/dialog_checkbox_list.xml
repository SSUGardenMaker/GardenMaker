<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:id="@+id/dialog_checkbox_list_checkbox"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_checkbox_list_title_text"
        android:text="아침 식사하기"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/dialog_checkbox_list_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_checkbox_list_sub_text"
        android:text="9월 14일 월요일까지"
        app:layout_constraintTop_toBottomOf="@id/dialog_checkbox_list_title_text"
        app:layout_constraintLeft_toLeftOf="@id/dialog_checkbox_list_title_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>