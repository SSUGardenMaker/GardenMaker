<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_black"
        android:padding="10dp">

        <TextView
            android:id="@+id/category_parent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="전체 카테고리"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/menu_text_color"/>

        <ImageView
            android:id="@+id/category_parent_expand"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/category_parent"
            app:layout_constraintBottom_toBottomOf="@+id/category_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            android:background="@drawable/ic_expand"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/category_parent_reduce"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/category_parent"
            app:layout_constraintBottom_toBottomOf="@+id/category_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            android:background="@drawable/ic_reduce"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>