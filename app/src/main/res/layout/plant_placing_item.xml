<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:background="@drawable/layout_border"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/iv_plant_placing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_plant_placing_name_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/plant24"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_plant_placing_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant_placing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/border_btn_dialog"
        android:backgroundTint="@color/btn_text_color"
        android:padding="7dp"
        android:text="만보기 테스트"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarket_sans_regular" />
</androidx.constraintlayout.widget.ConstraintLayout>