<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:background="@drawable/layout_border"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/iv_plant_placing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/plant24"
        android:adjustViewBounds="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant_placing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_plant_done_using"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_plant_done_using"
            android:layout_marginStart="5dp"
            android:text="배치 중"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/gmarket_sans_regular"/>

        <ImageView
            android:id="@+id/iv_plant_done_using"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/check"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/tv_plant_done_using"
            app:layout_constraintBottom_toBottomOf="@+id/tv_plant_done_using"
            app:layout_constraintLeft_toRightOf="@id/tv_plant_done_using" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>